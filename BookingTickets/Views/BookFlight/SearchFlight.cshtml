@model List<BookingTickets.Models.Flights>
@{
    ViewBag.Title = "SearchFlight";
}
<style>
    .input-container {
        display: -ms-flexbox; /* IE10 */
        display: flex;
        width: 100%;
        margin-bottom: 15px;
    }



    .icon {
        padding: 10px;
        background: dodgerblue;
        color: white;
        min-width: 50px;
        text-align: center;
        background-clip: padding-box;
        border: 1px solid #ced4da;
    }



    .form-control {
        border-radius: 0rem;
    }



    .input-field {
        width: 100%;
        padding: 10px;
        outline: none;
    }



        .input-field:focus {
            border: 2px solid dodgerblue;
        }
</style>
@using (Html.BeginForm("SearchFlight", "BookFlight", FormMethod.Post))
{
    
    @Html.AntiForgeryToken()
    <div class="page-section bg-light" style="padding-top:25px;">
        <div class="container">
            <h3 class="text-center wow fadeInUp">
                Find And Book Flight
            </h3>
            <div class="row mt-5" style="padding:35px 80px;border:1px;background-color: #fff;border-radius: 8px;">
                <div class="col-lg-3">
                    @Html.DropDownList("From_Id", null, "From", htmlAttributes: new { @class = "form-control drplist", id = "drpCityId" })
                    @*@Html.DropDownList("From", new List<SelectListItem>
                        {
                        new SelectListItem { Text = "-- From --", Value = "0", Selected=true},
                        new SelectListItem { Text = "Mumbai", Value = "1"},
                        new SelectListItem { Text = "Bangalore", Value = "2"},
                        new SelectListItem { Text = "Chennai", Value = "3"},
                        new SelectListItem { Text = "Hyderabad", Value = "4"},
                        new SelectListItem { Text = "Delhi", Value = "5"}
                        }, new { @class = "form-control" })*@
                </div>



                <div class="col-lg-3">
                    @Html.DropDownList("To_Id", null, "To", htmlAttributes: new { @class = "form-control drplist", id = "drpSpecId" })
                    @*@Html.DropDownList("To", new List<SelectListItem>
                        {
                        new SelectListItem { Text = "-- To --", Value = "0", Selected=true},
                        new SelectListItem { Text = "Mumbai", Value = "1"},
                        new SelectListItem { Text = "Bangalore", Value = "2"},
                        new SelectListItem { Text = "Chennai", Value = "3"},
                        new SelectListItem { Text = "Hyderabad", Value = "4"},
                        new SelectListItem { Text = "Delhi", Value = "5"}
                        }, new { @class = "form-control" })*@
                </div>
                <div class="col-lg-3">
                    @*@Html.TextBox("SelectedDate", "", new { @class = "form-control"})*@
                    <div class="input-container">
                        <input class="form-control" type="text" value="10-01-2022" placeholder="dd-mm-yyyy" id="SelectedDate" name="SelectedDate">
                        <i class="fa fa-calendar icon"></i>
                    </div>
                </div>
                <div class="col-lg-3">
                    <button type="submit" class="btn text-white btn-block btn-primary" id="btnSearch" style="background-color: dodgerblue;border-radius:0rem;">Search</button>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript" src='https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js'></script>
<link  rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css" type="text/css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js" type="text/javascript"></script>
<script type="text/javascript">
$(function () {
//Enable only next 3 months dates from Current date
var date = new Date();
var currentMonth = date.getMonth();
var currentDate = date.getDate();
var currentYear = date.getFullYear();
$('#SelectedDate').datepicker({
collapse: true,
format: "dd/mm/yyyy",
maxDate: new Date(currentYear, currentMonth + 3, currentDate)
});
});
</script>
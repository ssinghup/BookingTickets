@model BookingTickets.Models.LOGIN_USER
@{
    ViewBag.Title = "Login";
}
<div class="page-section bg-light" style="padding-top:25px;">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                @using (Html.BeginForm("Login", "User", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group first">
                        @Html.LabelFor(m => m.USERNAME)
                        @Html.TextBoxFor(m => m.USERNAME, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.USERNAME)
                    </div>
                    <div class="form-group last mb-4">
                        @Html.LabelFor(m => m.USER_PASSWORD)
                        @Html.PasswordFor(m => m.USER_PASSWORD, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.USER_PASSWORD)
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn text-white btn-block btn-primary">Log In</button>
                    </div> 
                }
            </div>
        </div>
    </div>
</div>